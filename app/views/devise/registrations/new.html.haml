%h2 Sign up
= simple_form_for(user, as: users, url: new_user_registration_path(user)) do |f|
  = f.error_notification
  .form-inputs
    = f.input :email, required: true, autofocus: true
    = f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable)
    = f.input :password_confirmation, required: true
    = f.input :owner_name, required: true
    = f.input :dog_name, required: true
  .form-actions
    = f.button :submit, "Sign up"
= render "devise/shared/links"
